# CoinButlerV3 환경 설정
# 사용법: 이 파일을 .env로 복사한 후 실제 값들을 입력하세요
# cp config.env .env

# ===== API 키 설정 =====
# 업비트 API 키 (필수)
UPBIT_ACCESS_KEY=your_upbit_access_key_here
UPBIT_SECRET_KEY=your_upbit_secret_key_here

# Google Gemini AI API 키 (필수)
GEMINI_API_KEY=your_gemini_api_key_here

# 텔레그램 봇 설정 (선택사항)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ===== 거래 설정 =====
# 투자 금액 (KRW)
INVESTMENT_AMOUNT=100000

# 수익률/손절률 설정 (소수점 형태)
PROFIT_RATE=0.03
LOSS_RATE=-0.02

# 거래량 급등 임계값 (배수)
VOLUME_SPIKE_THRESHOLD=2.0

# 가격 변동 임계값 (%)
PRICE_CHANGE_THRESHOLD=3.0

# ===== 리스크 관리 =====
# 최대 포지션 수
MAX_POSITIONS=3

# 일일 손실 한도 (음수로 입력)
DAILY_LOSS_LIMIT=-50000

# ===== 시스템 설정 =====
# 시장 스캔 주기 (초)
MARKET_SCAN_INTERVAL=600

# 포지션 체크 주기 (초)
POSITION_CHECK_INTERVAL=60

# 매수 대상 종목 수 (거래대금 기준 상위 N개)
TOP_MARKET_LIMIT=10

# 매일 정시 매도 시간 (24시간 형식, 예: 08:00)
DAILY_SELL_TIME=08:00

# 매일 정시 매도 활성화 (True/False)
ENABLE_DAILY_SELL=True

# 로그 레벨 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 대시보드 포트
STREAMLIT_PORT=8501

# ===== 개발 설정 =====
# 개발 모드 (True/False)
DEV_MODE=False

# 드라이런 모드 (실제 거래 없이 테스트)
DRY_RUN=False
